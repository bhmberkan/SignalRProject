        @* <div id="connstatus" style="margin-bottom:10px; font-weight:bold; color:green;"></div> *@

        <script type="text/javascript">
            $(document).ready(() => {
                
                const connection = new signalR.HubConnectionBuilder()
                    .withUrl("https://localhost:7244/SignalRHub")
                    .build();

              
                connection.on("ReceiveCategoryCount", value => $("#categorycount").text(value));
                connection.on("ReceiveProductCount", value => $("#productcount").text(value));
                connection.on("ReceiveActiveCategoryCount", value => $("#activecategorycount").text(value));
                connection.on("ReceivePassiveCategoryCount", value => $("#passivecategorycount").text(value));
                connection.on("ReceiveProductCountByCategoryNameHamburger", value => $("#productcountbycategorynamehamburger").text(value));
             
                connection.on("ReceiveProductCountByCategoryNameDrink", value => $("#productcountbycategorynamedrink").text(value));
                connection.on("ReceiveProductPriceAvg", value => $("#receiveproductpriceavg").text(value));
                connection.on("ReceiveProductNameByMaxPrice", value => $("#productnamebymaxprice").text(value));
                connection.on("ReceiveProductNameByMinPrice", value => $("#productnamebyminprice").text(value));
                connection.on("ReceiveProductAvgPriceByHamburger", value => $("#productavgpricebyhamburger").text(value));
                connection.on("ReceiveTotalOrderCount", value => $("#totalordercount").text(value));
                connection.on("ReceiveActiveOrderCount", value => $("#activeordercount").text(value));
                connection.on("ReceiveLastOrderPrice", value => $("#lastorderprice").text(value));
                connection.on("ReceiveTotalMoneyCaseAmount", value => $("#totalmoneycaseamount").text(value));
                connection.on("ReceiveMenuTableCount", value => $("#menutablecount").text(value));


                $("#connstatus").text("Bağlantı durumu: " + connection.state);

            
                connection.start()
                    .then(() => {
                        $("#connstatus").text("Bağlantı durumu: " + connection.state);

                     
                        setInterval(() => {
                            connection.invoke("SendStatistic");
                        }, 1000);
                    })
                    .catch(err => console.log("SignalR bağlantı hatası:", err));

            });
        </script>

